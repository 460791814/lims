@model Model.PersonnelManage.E_tb_OutPersonnel
@{
    ViewBag.Title = "OutPersonnelEdit";
    List<SelectListItem> _listselect=new List<SelectListItem>();
    _listselect.Add(new SelectListItem(){ Text="合作",Value="合作"});
    _listselect.Add(new SelectListItem(){ Text="参观",Value="参观"});
    _listselect.Add(new SelectListItem(){ Text="培训",Value="培训"});
    _listselect.Add(new SelectListItem(){ Text="其他",Value="其他"});                                     
}

<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    @using (Ajax.BeginForm("Save", "OutPersonnel", new AjaxOptions { HttpMethod = "Post", OnSuccess = "handle", OnFailure = "failed" }, new { @id = "frmUpdate" }))
        {
        @Html.HiddenFor(m => m.PersonnelID, new { @id = "HidPersonnelID" })
        @Html.HiddenFor(m => m.EditType, new { @id = "HidEditType" })
        <table border="0" cellpadding="0" cellspacing="0" width="98%" class="DialogTable">
            <tr>
                <td width="70px" align="right">姓名：</td>
                <td align="left" style="width: 120px;">@Html.TextBoxFor(m => m.PersonnelName, new { @style = "width:99%;", @id = "txt_PersonnelName" })</td>
                <td width="70px" align="right">性别：</td>
                <td align="left" style="width: 120px;">@Html.DropDownListFor(m => m.Sex, ViewData["SexList"] as SelectList, new { @style = "width:99%;" })</td>
                <td width="70px" align="right">单位：</td>
                <td align="left">@Html.TextBoxFor(m => m.Department, new { @style = "width:99%;", @id = "txt_Department" })</td>
            </tr>
            <tr>
                <td align="right">进入时间：</td>
                <td align="left">@Html.TextBoxFor(m => m.StartTime, new { @style = "width:99%;", @onclick = "WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})", @id = "txt_StartTime" })</td>
                <td align="right">离开时间：</td>
                <td align="left">@Html.TextBoxFor(m => m.EndTime, new { @style = "width:99%;", @onclick = "WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})", @id = "txt_EndTime" })</td>
                <td align="right">联系电话：</td>
                <td align="left">@Html.TextBoxFor(m => m.Tel, new { @style = "width:99%;", @id = "txt_Tel" })</td>
            </tr>
            <tr>
                <td align="right">类型：</td>
                <td align="left">@Html.DropDownListFor(m => m.Work_type, _listselect, new { @style = "width:100px;" })</td>
                <td align="right"></td>
                <td align="left"></td>
                <td align="right"></td>
                <td align="left"></td>
            </tr>
            <tr>
                <td align="right">事由：</td>
                <td align="left" colspan="5">@Html.TextAreaFor(m => m.Reason, new { @style = "height:100px;width:99%;", @id = "txt_Description" })</td>
            </tr>
            <tr>
                <td align="right">描述：</td>
                <td align="left" colspan="5">@Html.TextAreaFor(m => m.Remark, new { @style = "height:100px;width:99%;", @id = "txt_Description" })</td>
            </tr>
            <tr>
                <td colspan="6" align="center">
                    <a href="javascript:void(0)" onclick="$('#frmUpdate').submit()">
                        <img src="~/Content/Images/baocun.png" height="20px" /></a>
                    <a href="javascript:void(0)" onclick="Close()">
                        <img src="~/Content/Images/quxiao.png" height="20px" /></a>
                </td>
            </tr>
        </table>
        }
</body>
