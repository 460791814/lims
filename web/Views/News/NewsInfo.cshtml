@model Model.News.E_tb_News
@{
    ViewBag.Title = "NewsInfo";
}
<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>公告内容</title>
    <link href="/Content/XINDECSS/MainStyle.css" rel="stylesheet" type="text/css" />
    <style type="text/css">
        .title{width:100%; height:30px; line-height:30px; background:url(/Content/Images_Zhu/Images_53.jpg) repeat-x; margin-top:5px;}
        .title h2{height:30px;line-height:30px; font-size:14px; font-weight:600; text-align:left;padding-left:10px; background:url(/Content/Images_Zhu/images_52.jpg) no-repeat left; width:200px; float:left;}
        .title a{width:40px; height:30px; line-height:30px; display:block; float:right; margin-right:10px; color:Blue;}
        .NewsMain {width:95%; margin:0px auto;}
        .NewsMain h2{width:100%; height:35px; line-height:35px; font-weight:600; font-size:14px; text-align:center;}
        .NewsContent{width:100%;}
        .NewsFoot{ width:100%; height:25px; line-height:25px; text-align:right;}
    </style>
</head>
<body>
    <div class="title">
        <h2>公告详情</h2>
        <a href="javascript:history.go(-1);">返回</a>
    </div>
    <div class="NewsMain">
        <h2>@Model.Title</h2>
        <div class="NewsContent">
            @Html.Raw(Model.Contents.ToString());
        </div>
        <div class="NewsFoot">
            发布时间：@Model.UpdateTime
        </div>  
    </div>
</body>