@model Model.RoleManage.E_tb_Action
@{
    ViewBag.Title = "ActionEdit";
}
<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
        @using (Ajax.BeginForm("Save", "Action", new AjaxOptions { HttpMethod = "Post", OnSuccess = "handle", OnFailure = "failed" }, new { @id = "frmUpdate" }))
        {
            @Html.HiddenFor(m => m.ActionID, new { @id = "HidActionID" })
            @Html.HiddenFor(m => m.EditType, new { @id = "HidEditType" })
            @Html.HiddenFor(m => m.ParentID, new { @id = "HidParentID" })
            @Html.HiddenFor(m => m.ActionType, new { @id = "HidActionType" })
            <table border="0" cellpadding="0" cellspacing="0" width="98%" class="DialogTable">
                <tr>
                    <td width="70px" align="right">模块名称：</td>
                    <td align="left">@Html.TextBoxFor(m => m.ActionName, new { @style = "width:160px;", @id = "txt_ActionName" })</td>
                </tr>
                <tr>
                    <td width="70px" align="right">权限代码：</td>
                    <td align="left">@Html.TextBoxFor(m => m.ActionCode, new { @style = "width:160px;", @id = "txt_ActionCode" })</td>
                </tr>
                <tr>
                    <td width="70px" align="right">请求类型：</td>
                    <td align="left">@Html.TextBoxFor(m => m.RequestType, new { @style = "width:160px;", @id = "txt_RequestType" })</td>
                </tr>
                <tr>
                    <td width="70px" align="right">请求地址：</td>
                    <td align="left">@Html.TextBoxFor(m => m.RequestURL, new { @style = "width:160px;", @id = "txt_RequestURL" })</td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <a href="javascript:void(0)" onclick="$('#frmUpdate').submit()"><img src="~/Content/Images/baocun.png" height="20px" /></a>
                        <a href="javascript:void(0)" onclick="Close()"><img src="~/Content/Images/quxiao.png" height="20px" /></a>
                    </td>
                </tr>
            </table>
        }
</body>