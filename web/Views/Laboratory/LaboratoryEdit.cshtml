@model Model.Laboratory.E_tb_Laboratory
@{
    ViewBag.Title = "LaboratoryEdit";
}


<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>实验室信息</title>
</head>
<body>
        @using (Ajax.BeginForm("SaveLadoratory", "Laboratory", new AjaxOptions { HttpMethod = "Post", OnSuccess = "handle", OnFailure = "failed" }, new { @id = "frmUpdate" }))
        {
            @Html.HiddenFor(m => m.LaboratoryID, new { @id = "HidLaboratoryID" })
            @Html.HiddenFor(m => m.EditType, new { @id = "HidEditType" })
            <table border="0" cellpadding="0" cellspacing="0" width="98%" class="DialogTable">
                <tr>
                    <td width="90px" align="right">实验室名称：</td>
                    <td align="left">@Html.TextBoxFor(m => m.LaboratoryName, new { @style = "width:98%;", @id = "txt_LaboratoryName" })</td>
                    <td width="60px" align="right">区域：</td>
                    <td align="left">
                        @if (Model.UserDataRange == 1)
                        {
                            @Html.DropDownListFor(m => m.AreaID, ViewData["AreaList"] as SelectList)
                        }
                        else
                        { 
                           @Html.DropDownListFor(m => m.UserAreaID, ViewData["AreaList"] as SelectList, new { @disabled = "disabled" })
                        }
                    </td>
                </tr>
                <tr>
                    <td width="90px" align="right">实验室类型：</td>
                    <td align="left">@Html.DropDownListFor(m => m.LaboratoryTypeID, ViewData["LaboratoryTypeList"] as SelectList)</td>
                    <td width="60px" align="right">排序ID：</td>
                    <td align="left">@Html.TextBoxFor(m => m.OrderID, new { @style = "width:98%;", @id = "txt_OrderID" })</td>
                </tr>
                <tr>
                    <td width="90px" align="right" valign="middle">实验室说明：</td>
                    <td align="left" colspan="3">
                        @Html.TextAreaFor(m => m.Directions, new { @style = "height:200px;width:98%;", @id = "txt_Directions" })
                        <a id="unitE"></a>
                    </td>
                </tr>
                <tr>
                    <td colspan="4" align="center">
                        <a href="javascript:void(0)" onclick="$('#frmUpdate').submit()"><img src="~/Content/Images/baocun.png" height="20px" /></a>
                        <a href="javascript:void(0)" onclick="Close()"><img src="~/Content/Images/quxiao.png" height="20px" /></a>
                    </td>
                </tr>
            </table>
        }
</body>