@model Model.RoleManage.E_tb_Area
@{
    ViewBag.Title = "AreaEdit";
}
<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    @using (Ajax.BeginForm("Save", "Area", new AjaxOptions { HttpMethod = "Post", OnSuccess = "handle", OnFailure = "failed" }, new { @id = "frmUpdate" }))
    {
        @Html.HiddenFor(m => m.AreaID, new { @id = "HidAreaID" })
        @Html.HiddenFor(m => m.EditType, new { @id = "HidEditType" })
        <table border="0" cellpadding="0" cellspacing="0" width="98%" class="DialogTable">
            <tr>
                <td width="70px" align="right">区域名称：</td>
                <td align="left">@Html.TextBoxFor(m => m.AreaName, new { @style = "width:160px;", @id = "txt_AreaName" })</td>
            </tr>
            <tr>
                <td width="70px" align="right">检查报告名称：</td>
                <td align="left">@Html.TextBoxFor(m => m.TestReportName, new { @style = "width:160px;", @id = "txt_AreaName" })</td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <a href="javascript:void(0)" onclick="$('#frmUpdate').submit()">
                        <img src="~/Content/Images/baocun.png" height="20px" /></a>
                    <a href="javascript:void(0)" onclick="Close()">
                        <img src="~/Content/Images/quxiao.png" height="20px" /></a>
                </td>
            </tr>
        </table>
    }
</body>
