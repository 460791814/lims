@model Model.RoleManage.E_tb_Role
@{
    ViewBag.Title = "RoleEdit";
}
<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
        @using (Ajax.BeginForm("Save", "Role", new AjaxOptions { HttpMethod = "Post", OnSuccess = "handle", OnFailure = "failed" }, new { @id = "frmUpdate" }))
        {
            @Html.HiddenFor(m => m.RoleID, new { @id = "HidRoleID" })
            @Html.HiddenFor(m => m.EditType, new { @id = "HidEditType" })
            <table border="0" cellpadding="0" cellspacing="0" width="98%" class="DialogTable">
                <tr>
                    <td width="70px" align="right">角色名称：</td>
                    <td align="left">@Html.TextBoxFor(m => m.RoleName, new { @style = "width:160px;", @id = "txt_RoleName" })</td>
                    <td width="70px" align="right">数据范围：</td>
                    <td align="left">@Html.DropDownListFor(m => m.DataRange, ViewData["DataRangeList"] as SelectList)</td>
                </tr>
                <tr>
                    <td colspan="4" align="center">
                        <a href="javascript:void(0)" onclick="$('#frmUpdate').submit()"><img src="~/Content/Images/baocun.png" height="20px" /></a>
                        <a href="javascript:void(0)" onclick="Close()"><img src="~/Content/Images/quxiao.png" height="20px" /></a>
                    </td>
                </tr>
            </table>
        }
</body>